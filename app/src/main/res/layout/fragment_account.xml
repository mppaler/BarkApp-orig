<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_inside_app_bg"
    android:padding="5dp"
    tools:context="com.codeworm.barkapp.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/display_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_picture"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="ACCOUNT DETAILS"
        android:textAlignment="center"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you wish to change your information details, click on the specific row."
        android:textColor="#FFF"
        android:layout_above="@+id/listAccountDetails"/>
    <ListView
        android:id="@+id/listAccountDetails"
        style="@style/ListViewStyle.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_title"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cancel_button_bg"
        android:text="LOGOUT"
        android:layout_below="@+id/listAccountDetails"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/account_title"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_full_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/account_title"
                android:layout_marginLeft="10dp"
                android:text="FULL NAME"
                android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    android:text="ACCOUNT DETAILS"
                    android:textAlignment="center"
                    android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="70"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/account_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="USERNAME"
                android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    android:text="ACCOUNT DETAILS"
                    android:textAlignment="center"
                    android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_change_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:text="Change" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/account_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="PASSWORD"
                android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    android:text="N/A"
                    android:textAlignment="center"
                    android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:text="CHANGE" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/account_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="MOBILE NUMBER"
                android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobilenum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    android:text="ACCOUNT DETAILS"
                    android:textAlignment="center"
                    android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_change_mobilenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:text="CHANGE" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>